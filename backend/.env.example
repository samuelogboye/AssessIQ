# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=config.settings.development
ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For Docker internal: use db:5432
# For external/localhost: use localhost:5433
DATABASE_URL=postgres://assessiq:assessiq@db:5432/assessiq
CONN_MAX_AGE=60

# =============================================================================
# REDIS & CELERY CONFIGURATION
# =============================================================================
# For Docker internal: use redis:6379
# For external/localhost: use localhost:6380
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# SSL/HTTPS settings (set to True in production)
SECURE_SSL_REDIRECT=False

# Custom admin URL (change in production for security)
ADMIN_URL=admin/

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@assessiq.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# GRADING SERVICE CONFIGURATION
# =============================================================================
# Options: mock, openai, claude, gemini
GRADING_SERVICE=mock

# OpenAI API Key (required if using OpenAI grading)
OPENAI_API_KEY=

# Anthropic Claude API Key (required if using Claude grading)
ANTHROPIC_API_KEY=

# Google Gemini API Key (required if using Gemini grading)
GOOGLE_API_KEY=

# =============================================================================
# RATE LIMITING
# =============================================================================
# Format: number/period (e.g., 100/hour, 1000/day)
ANON_RATE_LIMIT=100/hour
USER_RATE_LIMIT=1000/hour

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry DSN (optional, for production error tracking)
SENTRY_DSN=

# =============================================================================
# STATIC & MEDIA FILES
# =============================================================================
MEDIA_URL=/media/
MEDIA_ROOT=media/

# =============================================================================
# API DOCUMENTATION
# =============================================================================
# Set to False in production for security
SERVE_SCHEMA=True
